{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "watch": false,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["*"],
  "exclude": []
}
